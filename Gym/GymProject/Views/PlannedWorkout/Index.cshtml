@model IEnumerable<Gym.Models.PlannedWorkout>

@{
    ViewData["Title"] = "Planned Workouts";
}

<h4>Planned Workouts</h4>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exercise_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planned_Set_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planned_Reps)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Planned_Weight)
            </th>
            <th><a asp-action="Create" class="btn btn-outline-success">Create New</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Exercise_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Planned_Set_Number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Planned_Reps)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Planned_Weight)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ExerciseID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ExerciseID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ExerciseID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
