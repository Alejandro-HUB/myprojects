@model Gym.Models.PlannedWorkout

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Planned Workout</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Exercise_Name" class="control-label"></label>
                <input asp-for="Exercise_Name" class="form-control" />
                <span asp-validation-for="Exercise_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planned_Set_Number" class="control-label"></label>
                <input asp-for="Planned_Set_Number" class="form-control" />
                <span asp-validation-for="Planned_Set_Number" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planned_Reps" class="control-label"></label>
                <input asp-for="Planned_Reps" class="form-control" />
                <span asp-validation-for="Planned_Reps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Planned_Weight" class="control-label"></label>
                <input asp-for="Planned_Weight" class="form-control" />
                <span asp-validation-for="Planned_Weight" class="text-danger"></span>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="submit" value="Create" class="btn btn-primary btn-block" />
                </div>
                <div class="form-group col-md-6">
                    <a asp-action="Index" class="btn btn-secondary btn-block">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
