@model IEnumerable<Gym.Models.Exercise>

@{
    ViewData["Title"] = "Exercises";
}

<h4>Exercises</h4>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Exercise_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Exercise_Description)
            </th>
            <th><a asp-action="Create" class="btn btn-outline-success">Create New</a></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Exercise_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exercise_Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
